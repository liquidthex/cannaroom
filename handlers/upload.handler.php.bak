    function trace($message, $isWriteLog = true)
    {
        $content = print_r($message, true);
        if($isWriteLog)
        {
            $handle = @fopen('./log.txt', 'a');
            @fwrite($handle, date("Y-m-d H:i:s")."\r\n".$content."\r\n\r\n");
            @fclose($handle);
        }
        else echo "<pre>".$content."</pre><br>";
    }
    
